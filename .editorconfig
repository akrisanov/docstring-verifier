# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript and JavaScript
[*.{ts,js,mts,cts}]
indent_style = tab
indent_size = 4
max_line_length = 120

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# JSONC files (with comments)
[*.jsonc]
indent_style = tab
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_style = tab
indent_size = 2

# Config files
[{tsconfig.json,eslint.config.mjs,.prettierrc,.eslintrc*}]
indent_style = tab
indent_size = 2

# Git config
[.gitattributes]
indent_style = tab
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
